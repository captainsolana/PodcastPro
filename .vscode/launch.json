{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/index.ts",
      "envFile": "${workspaceFolder}/.env.development",
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeExecutable": "tsx",
      "runtimeArgs": ["--inspect"],
      "console": "integratedTerminal",
      "restart": true,
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
